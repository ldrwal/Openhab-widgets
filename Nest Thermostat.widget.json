    "readme_url": "https://github.com/marcelwolf/Openhab-widgets",
    "template": "<style>\n.temperature {\n  position:absolute;\n  top:15px;\n  width:97%;\n  font-size:16px;\n  text-align: middle;\n}\n\n.humidity {\n  position:absolute;\n  width:97%;\n  top:35px;\n  font-size:16px;\n  text-align: middle;\n}\n  \n.knob {\n  position:relative;\n  margin: auto;\n  width: 50%;\n  top:-25px;\n}\n  \n.mode {\n  position:absolute;\n\ttop:165px;\n  text-align:left;\n}\n  \n.time_to_target {\n  position:absolute;\n\ttop:100px;\n  width:95%;\n  text-align:middle;\n  \n}\n  \n</style> \n<div class=\"temperature\">{{itemValue(config.temperature)}}</div>\n<div class=\"humidity\">{{itemValue(config.humidity)}}</div>\n<div class=\"mode\">{{itemValue(config.mode)}}</div>\n<div class=\"time_to_target\">{{itemValue(config.time_to_target)}}</div>\n\n<div ng-init='thermostat={\n                \"sizeX\": 2,\n                \"sizeY\": 2,\n                \"item\": config.set_point,\n                \"type\": \"knob\",\n                \"row\": 0,\n                \"col\": 10,\n                \"floor\": 18,\n                \"ceil\": 24,\n                \"step\": 0.5,\n                \"unit\": \"Â°C\",\n                \"trackWidth\": 20,\n                \"barWidth\": 20,\n                \"fontSize\": 25,\n                \"startAngle\": 50,\n                \"endAngle\": 310,\n                \"readOnly\": false,\n                \"subTextEnabled\": true,\n                \"scaleEnabled\": true,\n                \"scaleType\": \"dots\",\n                \"skinType\": \"tron\",\n                \"skinWidth\": 0,\n                \"skinColor\": \"red\",\n                \"skinSpaceWidth\": 1,\n                \"rangesEnabled\": true,\n                \"rangesTextColorMatching\": false,\n                \"ranges\": [\n\n                    {\n                        \"min\": itemValue(config.temperature),\n                        \"max\": 24,\n                        \"barColor\": \"red\",\n                        \"$$hashKey\": \"object:3701\"\n                    }\n                ],\n            \n                \"$$hashKey\": \"object:183\"\n            }'>\n   <div class=\"knob\" style=\"width:{{config.size}}px\">\n      <div>\n         <div><widget-knob ng-model=\"thermostat\" ng-click=\"sendCmd(config.set_point, thermostat.value)\" /></div>\n      </div>\n  </div>\n\n</div>"
}